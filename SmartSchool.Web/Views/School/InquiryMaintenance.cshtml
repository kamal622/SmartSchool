
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div ng-controller="InquiryMaintCtrl">
    <div class="row">
        <fieldset>
            <legend>Inquiry Search Criteria</legend>
            <div class="row form-group">
                <div class="col-md-1  vertical-center"><label>Name</label></div>
                <div class="col-md-4 ">
                    <jqx-input ng-model="Name" jqx-width="'100%'" jqx-height="InputHeight" jqx-theme="Theme"></jqx-input>
                </div>
                <div class="col-md-1  vertical-center">
                    <label>Program</label>
                </div>
                <div class="col-md-4 ">
                    <jqx-drop-down-list ng-model="selectedCourse"
                                        jqx-width="200"
                                        jqx-height="30"
                                        jqx-auto-drop-down-height="true"
                                        jqx-display-member="'name'"
                                        jqx-value-member="'name'"
                                        jqx-source="courses"
                                        jqx-theme="Theme"></jqx-drop-down-list>
                </div>
            </div>
            <div class="row form-group">
                

                <div class="col-md-1  vertical-center"><label>IsRegistered</label></div>
                <div class="col-md-1">
                    <jqx-radio-button jqx-group-name="IsRegistered" ng-model="RegisterValue" value="1" jqx-width="250" jqx-checked="true" jqx-height="25" jqx-theme="Theme">
                        Yes
                    </jqx-radio-button>
                </div>
                <div class="col-md-1">
                    <jqx-radio-button jqx-group-name="IsRegistered" ng-model="RegisterValue" value="2" jqx-width="250" jqx-checked="false" jqx-height="25" jqx-theme="Theme">
                        No
                    </jqx-radio-button>
                </div>
                <div class="col-md-2">
                    <jqx-radio-button jqx-group-name="IsRegistered" ng-model="RegisterValue" value="3" jqx-width="250" jqx-checked="false" jqx-height="25" jqx-theme="Theme">
                        All
                    </jqx-radio-button>
                </div>
                <div class="col-md-1  vertical-center"><label>Inquiry during</label></div>
                <div class="col-md-4">
                    <jqx-drop-down-list ng-model="selectedDuration"
                                        jqx-width="200"
                                        jqx-height="30"
                                        jqx-auto-drop-down-height="true"
                                        jqx-display-member="'name'"
                                        jqx-value-member="'name'"
                                        jqx-source="Duration"
                                        jqx-theme="Theme"></jqx-drop-down-list>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-1  vertical-center">
                </div>
                <div class="col-md-3">
                    <jqx-button jqx-theme="Theme" jqx-width="100" jqx-height="30" jqx-on-click="onSearch(event)">Seacrh</jqx-button>
                </div>
            </div>
        </fieldset>
    </div>
    <div class="row">
        <fieldset>
            <legend>Inquiry Details</legend>
            @*<jqx-link-button jqx-theme="Theme" jqx-width="200" jqx-height="30">
                    <div>
                       <a style='margin: 4px;text-decoration:underline;' href='/School/Inquiry/0'> Add Inquiry</a>";
                    </div>
                </jqx-link-button>*@
            <jqx-grid jqx-create="createWidget"
                      jqx-columns="[
                      { text: 'Id', datafield: 'Id', hidden: true },
                      { text: 'IsRegistered', datafield: 'IsRegistered', hidden: true },
                      { text: 'Name', datafield: 'Name', width: '26%' },
                      { text: 'Contact No', datafield: 'PhoneNumber', width: '10%' },
                      { text: 'Program', datafield: 'Course', width: '20%' },
                      { text: 'Prefered Batch', datafield: 'PreferedBatch', width: '20%' },
                      { text: 'Inquiry Date', datafield: 'InquiryDate', width: '10%' ,cellsformat: 'dd/MM/yyyy'},
                      { text: '', width: '7%', cellsrenderer: EditInquiry,sortable: false },
                      { text: '', width: '7%', cellsrenderer: Register ,sortable: false}
                      ]"
                      jqx-settings="InquiryGrid"
                      jqx-columnsresize=true
                      jqx-sortable=true
                      jqx-source="sourceInquiry"
                      jqx-width="'100%'"
                      jqx-height="250"
                      jqx-theme="Theme"></jqx-grid>
        </fieldset>
    </div>
</div>

@section scripts {
    <script type="text/javascript" src="~/JS/School/InquiryMaintenanceController.js"></script>
}